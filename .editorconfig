root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
ident_size = 4

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.toml]
ident_size = 2

[*.css]
ident_size = 2

[{.gitignore,.gitkeep,.gitattributes,.editorconfig,Dangerfile}]
ident_size = 2
